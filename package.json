{
  "dependencies": {
    "concurrently": "^5.3.0"
  },

  "scripts": {
    "start": "yarn start --prefix client",
    "client-install": "yarn install --prefix client", 
    "server": "nodemon server/server.js", 
    "client": "yarn start --prefix client", 
    "dev": "concurrently \"yarn run server\" \"yarn run client\"", 
    "heroku-postbuild": "YARN_PRODUCTION=true yarn install --prefix client && yarn run build --prefix client"
  }, 
  "engines": {
    "node": "14.15.1",
    "npm": "6.14.9"
}
}
